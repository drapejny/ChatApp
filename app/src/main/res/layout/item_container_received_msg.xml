<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_4sdp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageMsgProfile"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:background="@drawable/background_image"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/messageText"
        app:layout_constraintStart_toStartOf="parent"
        app:riv_oval="true"/>
    
    <TextView
        android:id="@+id/messageText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginLeft="@dimen/_4sdp"
        android:background="@drawable/background_received_msg"
        android:padding="@dimen/_12sdp"
        android:text="skdfj "
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/imageMsgProfile"
        app:layout_constraintTop_toTopOf="parent"
        android:maxWidth="@dimen/_200sdp" />

    <TextView
        android:id="@+id/msgTimeText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:textColor="@color/gray"
        android:text="11:00"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="@id/messageText"
        app:layout_constraintTop_toBottomOf="@id/messageText"/>



</androidx.constraintlayout.widget.ConstraintLayout>